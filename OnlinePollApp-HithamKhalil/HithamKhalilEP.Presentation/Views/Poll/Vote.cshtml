@model YourNameEP.Domain.Models.Poll

<h2>Vote: @Model.Title</h2>

<form asp-action="Vote" method="post">
    <input type="hidden" name="pollId" value="@Model.Id" />

    <div class="form-check">
        <input class="form-check-input" type="radio" name="selectedOption" value="1" id="opt1" required />
        <label class="form-check-label" for="opt1">@Model.Option1Text</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="selectedOption" value="2" id="opt2" />
        <label class="form-check-label" for="opt2">@Model.Option2Text</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="selectedOption" value="3" id="opt3" />
        <label class="form-check-label" for="opt3">@Model.Option3Text</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit Vote</button>
</form>

<a href="/Poll/Index" class="btn btn-secondary mt-2">Back to Polls</a>
